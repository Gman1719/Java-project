<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?> 

<VBox spacing="15" style="-fx-padding: 30; -fx-background-color: #F4F7F9;" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LeaveRequestFormController">
    
    <Label text="âœ… Submit Leave Request" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #34495E;"/>
    <Separator/>
    
    <Label fx:id="lblAvailableDays" text="Available Leave Days: 15" style="-fx-font-weight: bold; -fx-text-fill: #E67E22;"/>

    <GridPane hgap="20" vgap="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150" hgrow="NEVER" />
            <ColumnConstraints minWidth="250" prefWidth="300" hgrow="ALWAYS" />
        </columnConstraints>
        
        <Label text="Leave Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbLeaveType" promptText="Select Type" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Start Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpStartDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="End Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpEndDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Total Days:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="lblTotalDays" text="0.0 Days" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Reason:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtReason" prefRowCount="3" promptText="Reason for leave" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    </GridPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Submit Request" onAction="#handleSubmitRequest" style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button text="Close" onAction="#handleClose" style="-fx-background-color: #ECF0F1; -fx-text-fill: #34495E; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>
</VBox>