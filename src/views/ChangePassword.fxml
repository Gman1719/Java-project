<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-padding: 30; -fx-background-color: #F4F7F9;" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="controllers.ChangePasswordController">
    
    <Label text="ðŸ” Change Password" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #34495E;"/>
    <Separator/>
    
    <GridPane hgap="20" vgap="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="180" hgrow="NEVER" />
            <ColumnConstraints minWidth="250" prefWidth="300" hgrow="ALWAYS" />
        </columnConstraints>
        
        <Label text="Current Password:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pfCurrentPassword" promptText="Enter current password" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="New Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pfNewPassword" promptText="Enter new password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Confirm New Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pfConfirmPassword" promptText="Re-enter new password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Update Password" onAction="#handleUpdatePassword" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #ECF0F1; -fx-text-fill: #34495E; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>
</VBox>