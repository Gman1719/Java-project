<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: #ffffff; -fx-padding: 40; -fx-border-color: #ddd; -fx-border-radius: 8;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="controllers.HRChangePasswordController">
    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1E3F66;" text="Secure Password Update" />
    <Separator />
    <GridPane hgap="20" vgap="15" maxWidth="400">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <Label text="Current Password:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <PasswordField fx:id="txtCurrentPassword" promptText="Enter current password" style="-fx-border-radius: 4;" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <Label text="New Password:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <PasswordField fx:id="txtNewPassword" promptText="Enter new password" style="-fx-border-radius: 4;" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <Label text="Confirm New Password:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <PasswordField fx:id="txtConfirmPassword" promptText="Confirm new password" style="-fx-border-radius: 4;" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>
    <Button text="Update Password" onAction="#handlePasswordUpdate" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-border-radius: 4; -fx-font-size: 16px; -fx-padding: 10 20; -fx-cursor: hand;" />
</VBox>