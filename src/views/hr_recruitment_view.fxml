<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?> <AnchorPane prefHeight="780.0" prefWidth="1200.0" styleClass="content-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RecruitmentController">
    <stylesheets>
        <URL value="@/css/hr_dashboard_styles.css" /> 
    </stylesheets>
    
    <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label text="Recruitment &amp; Applicant Tracking System" styleClass="view-title">
            <font><Font size="24.0" /></font>
        </Label>

        <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane-modern">
            
            <Tab text="Job Postings &amp; Requisitions">
                <VBox spacing="15.0" style="-fx-padding: 20;">
                    
                    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="tool-bar-panel">
                        <Label text="Filter by Department:" />
                        <ComboBox fx:id="cmbJobDepartmentFilter" promptText="All Departments" prefWidth="150.0" />
                        
                        <Label text="Status:" />
                        <ComboBox fx:id="cmbJobStatusFilter" promptText="Active" prefWidth="120.0" />
                        
                        <Region HBox.hgrow="ALWAYS" />
                        <Button text="âž• Create New Job Requisition" onAction="#createNewRequisition" styleClass="button-primary" />
                    </HBox>
                    
                    <TableView fx:id="tblJobPostings" VBox.vgrow="ALWAYS" minHeight="350.0">
                        <columns>
                            <TableColumn fx:id="colJobTitle" text="Job Title" prefWidth="250.0" />
                            <TableColumn fx:id="colJobDepartment" text="Department" prefWidth="150.0" />
                            <TableColumn fx:id="colHiringManager" text="Hiring Manager" prefWidth="150.0" />
                            <TableColumn fx:id="colApplicants" text="Applicants" prefWidth="80.0" />
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
                            <TableColumn fx:id="colJobPostedDate" text="Posted Date" prefWidth="120.0" />
                            <TableColumn fx:id="colJobActions" text="Actions" prefWidth="100.0" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                    
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <Label fx:id="lblJobSummary" text="Open Positions: 5 | Total Applicants: 124" styleClass="summary-label-present" />
                    </HBox>
                    
                </VBox>
            </Tab>
            
            <Tab text="Candidate Pipeline">
                <VBox spacing="15.0" style="-fx-padding: 20;">
                    <Label text="Candidate Pipeline View (Drag &amp; Drop Ready)" styleClass="panel-title" />
                    
                    <HBox fx:id="kanbanContainer" spacing="15.0" VBox.vgrow="ALWAYS">
                        
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0" styleClass="kanban-column, kanban-new">
                            <Label text="New Applications (25)" styleClass="kanban-title" />
                            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                                <VBox fx:id="colNewApplications" spacing="8.0" style="-fx-padding: 5;" />
                            </ScrollPane>
                        </VBox>
                        
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0" styleClass="kanban-column, kanban-screen">
                            <Label text="HR Screen (12)" styleClass="kanban-title" />
                            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                                <VBox fx:id="colHRScreen" spacing="8.0" style="-fx-padding: 5;" />
                            </ScrollPane>
                        </VBox>
                        
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0" styleClass="kanban-column, kanban-interview">
                            <Label text="Interview Stage (8)" styleClass="kanban-title" />
                            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                                <VBox fx:id="colInterview" spacing="8.0" style="-fx-padding: 5;" />
                            </ScrollPane>
                        </VBox>
                        
                        <VBox HBox.hgrow="ALWAYS" spacing="5.0" styleClass="kanban-column, kanban-offer">
                            <Label text="Offer Extended (3)" styleClass="kanban-title" />
                            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                                <VBox fx:id="colOffer" spacing="8.0" style="-fx-padding: 5;" />
                            </ScrollPane>
                        </VBox>
                        
                    </HBox>
                    <Label text="Note: Candidate cards are dynamically loaded into these VBoxes." style="-fx-font-size: 11px; -fx-text-fill: #999;" />
                </VBox>
            </Tab>
            
        </TabPane>
    </VBox>
</AnchorPane>