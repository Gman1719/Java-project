<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #F4F7F9;" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.EditProfileController">
    <Label text="ðŸ‘¤ My Profile and Contact Details" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #34495E;"/>
    <Separator/>
    
    <GridPane hgap="20" vgap="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="180" hgrow="NEVER" />
            <ColumnConstraints minWidth="250" prefWidth="300" hgrow="ALWAYS" />
        </columnConstraints>
        
        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtFirstName" promptText="First Name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtLastName" promptText="Last Name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Email (Login ID):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="lblEmail" text="employee@company.com" style="-fx-font-weight: bold; -fx-text-fill: #3498DB;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Phone Number:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPhone" promptText="e.g. 555-1234" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtAddress" prefRowCount="3" promptText="Full Address" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Date Joined:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="lblDateJoined" text="2024-01-01" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Position:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="lblPosition" text="Junior Developer" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Save Changes" onAction="#handleSaveProfile" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #ECF0F1; -fx-text-fill: #34495E; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>
</VBox>