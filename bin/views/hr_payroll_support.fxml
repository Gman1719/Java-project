<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane prefHeight="850.0" prefWidth="1250.0" styleClass="main-window" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PayrollValidationController">
    <stylesheets>
        <URL value="@/css/hr_dashboard_styles.css" />
    </stylesheets>

    <top>
        <VBox spacing="0" styleClass="header-area">
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 20 30;">
                <VBox spacing="5">
                    <Label text="Payroll Monitoring" styleClass="header-title" />
                    <Label text="Verify employee attendance, leaves, and salary status" styleClass="header-subtitle" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#onExportPDF" styleClass="btn-outline" text="Download Payroll Report" />
            </HBox>

            <HBox spacing="20" style="-fx-padding: 0 30 20 30;">
                <VBox prefWidth="250" styleClass="stat-card">
                    <Label styleClass="stat-label" text="Total Net Salary" />
                    <Label fx:id="lblTotalPayroll" styleClass="stat-value" text="₱ 0.00" />
                </VBox>
                <VBox prefWidth="250" styleClass="stat-card">
                    <Label styleClass="stat-label" text="Pending Verification" />
                    <Label fx:id="lblPendingCount" styleClass="stat-value-warn" text="0 Employees" />
                </VBox>
                <VBox prefWidth="250" styleClass="stat-card">
                    <Label styleClass="stat-label" text="Approved Leaves" />
                    <Label fx:id="lblApprovedLeaves" styleClass="stat-value-info" text="0 Days" />
                </VBox>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="filter-bar">
                <ComboBox fx:id="cmbMonthFilter" prefWidth="140.0" promptText="Select Month" styleClass="modern-combo" />
                <ComboBox fx:id="cmbDeptFilter" prefWidth="160.0" promptText="Department" styleClass="modern-combo" />
                <ComboBox fx:id="cmbStatusFilter" prefWidth="140.0" promptText="Payroll Status" styleClass="modern-combo" />
                <TextField fx:id="txtSearchEmployee" prefWidth="250.0" promptText="Search Employee Name..." styleClass="modern-search" />
                <Button onAction="#applyFilters" styleClass="btn-primary" text="Apply Filter" />
                <Button onAction="#refreshDataFromDatabase" styleClass="btn-secondary" text="Refresh Data" />
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.65" styleClass="modern-split-pane">
            <VBox styleClass="table-container">
                <TableView fx:id="tblPayroll" styleClass="modern-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colID" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colName" prefWidth="180.0" text="Employee Name" />
                        <TableColumn fx:id="colDept" prefWidth="130.0" text="Department" />
                        <TableColumn fx:id="colAttendance" prefWidth="100.0" text="Days Worked" />
                        <TableColumn fx:id="colLeaves" prefWidth="100.0" text="Paid Leaves" />
                        <TableColumn fx:id="colNetSalary" prefWidth="120.0" text="Net Salary" />
                        <TableColumn fx:id="colStatus" prefWidth="110.0" text="Status" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <ScrollPane fitToWidth="true" styleClass="detail-scroll">
                <VBox spacing="20.0" styleClass="detail-pane">
                    <Label styleClass="section-title" text="Payroll Breakdown" />
                    
                    <VBox spacing="10" styleClass="info-card">
                        <Label styleClass="card-subtitle" text="EMPLOYEE VERIFICATION" />
                        <GridPane hgap="10" vgap="12">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label styleClass="field-label" text="Employee:" />
                                <Label fx:id="lblDetailName" styleClass="field-value-bold" text="Select Employee" GridPane.columnIndex="1" />
                                <Label styleClass="field-label" text="Worked Days:" GridPane.rowIndex="1" />
                                <Label fx:id="lblDetailAttendance" styleClass="field-value" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label styleClass="field-label" text="Leaves Used:" GridPane.rowIndex="2" />
                                <Label fx:id="lblDetailLeaves" styleClass="field-value" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                    </VBox>

                    <VBox spacing="10" styleClass="info-card">
                        <Label styleClass="card-subtitle" text="SALARY DETAILS (READ-ONLY)" />
                        <Separator />
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <children>
                                <Label styleClass="field-label" text="Basic Salary:" />
                                <Label fx:id="lblBasicSalary" text="₱ 0.00" GridPane.columnIndex="1" />
                                <Label styleClass="field-label" text="Allowances:" GridPane.rowIndex="1" />
                                <Label fx:id="lblAllowances" style="-fx-text-fill: green;" text="₱ 0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label styleClass="field-label" text="Deductions:" GridPane.rowIndex="2" />
                                <Label fx:id="lblDeductions" style="-fx-text-fill: red;" text="₱ 0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label style="-fx-font-weight: bold;" text="NET PAYABLE:" GridPane.rowIndex="3" />
                                <Label fx:id="lblNetPayable" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="₱ 0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                    </VBox>
                    </VBox>
            </ScrollPane>
        </SplitPane>
    </center>
</BorderPane>