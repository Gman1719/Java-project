<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditEmployeeController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="650.0" prefWidth="800.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Edit Employee Record" textFill="#0984e3">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Separator prefWidth="200.0" />
            
            <HBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="760.0" spacing="20.0">
               <children>
                  
                  <GridPane hgap="15.0" vgap="15.0" prefWidth="370.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     
                    <Label text="Employee ID:" />
                    <TextField fx:id="txtEmployeeId" editable="false" promptText="ID" GridPane.columnIndex="1" />
                        
                    <Label text="Username*:" GridPane.rowIndex="1" />
                    <TextField fx:id="txtUsername" promptText="Login Username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    
                    <Label text="New Password:" GridPane.rowIndex="2" />
                    <PasswordField fx:id="txtNewPassword" promptText="Leave blank to keep existing" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                    <Label text="First Name*:" GridPane.rowIndex="3" />
                    <TextField fx:id="txtFirstName" promptText="First Name" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                    <Label text="Last Name*:" GridPane.rowIndex="4" />
                    <TextField fx:id="txtLastName" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                    <Label text="Email*:" GridPane.rowIndex="5" />
                    <TextField fx:id="txtEmail" promptText="email@company.com" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                    <Label text="Phone*:" GridPane.rowIndex="6" />
                    <TextField fx:id="txtPhone" promptText="09XXXXXXXX" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <Label text="Designation*:" GridPane.rowIndex="7" />
                    <TextField fx:id="txtDesignation" promptText="Job Title" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                    <Label text="User Role*:" GridPane.rowIndex="8" />
                    <ComboBox fx:id="cbRole" prefWidth="250.0" promptText="Select Role" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                        
                    <Label text="Department*:" GridPane.rowIndex="9" />
                    <ComboBox fx:id="cbDepartment" prefWidth="250.0" promptText="Select Department" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                        
                    <Label text="Date Joined*:" GridPane.rowIndex="10" />
                    <DatePicker fx:id="dpDateJoined" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                  </GridPane>
                  
                  <GridPane hgap="15.0" vgap="15.0" prefWidth="370.0">
                     <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     
                     <Label text="Gender*:" />
                     <HBox alignment="CENTER_LEFT" spacing="15.0" GridPane.columnIndex="1">
                        <children>
                           <RadioButton fx:id="rbMale" mnemonicParsing="false" text="Male">
                              <toggleGroup>
                                 <ToggleGroup fx:id="tgGender" />
                              </toggleGroup>
                           </RadioButton>
                           <RadioButton fx:id="rbFemale" mnemonicParsing="false" text="Female" toggleGroup="$tgGender" />
                           <RadioButton fx:id="rbOther" mnemonicParsing="false" text="Other" toggleGroup="$tgGender" />
                        </children>
                     </HBox>
                     
                     <Label text="Base Salary*:" GridPane.rowIndex="1" />
                     <TextField fx:id="txtSalary" promptText="e.g., 50000.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     
                     <Label text="Bank Account*:" GridPane.rowIndex="2" />
                     <TextField fx:id="txtBankAccount" promptText="Account Number" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     
                     <Label text="Status*:" GridPane.rowIndex="3" />
                     <ComboBox fx:id="cbStatus" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                     <Region GridPane.rowIndex="4" />
                  </GridPane>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
            
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleUpdateEmployee" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #27ae60;" text="Save Changes" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #95a5a6;" text="Cancel" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </HBox>
            
         </children>
      </VBox>
   </children>
</AnchorPane>