<?import javafx.scene.text.Font?>

<GridPane fx:id="rootGridPane" prefHeight="550.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddUserController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
    </rowConstraints>
    <children>
        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Add System User" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
            <GridPane.margin>
                <Insets top="10.0" />
            </GridPane.margin>
        </Label>

        <Label text="Username:" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <TextField fx:id="txtUsername" promptText="Login Name" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </TextField>

        <Label text="Password:" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <PasswordField fx:id="txtPassword" promptText="Secret Password" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </PasswordField>

        <Label text="First Name:" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <TextField fx:id="txtFirstName" promptText="First Name" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </TextField>

        <Label text="Last Name:" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <TextField fx:id="txtLastName" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </TextField>
        
        <Label text="Email:" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <TextField fx:id="txtEmail" promptText="user@company.com" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </TextField>

        <Label text="Phone:" GridPane.rowIndex="6">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <TextField fx:id="txtPhone" promptText="(123) 456-7890" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </TextField>

        <Label text="Role:" GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <ComboBox fx:id="cbRole" prefWidth="1.7976931348623157E308" promptText="Select Role" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </ComboBox>

        <Label text="Department:" GridPane.rowIndex="8">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <ComboBox fx:id="cbDepartment" prefWidth="1.7976931348623157E308" promptText="Select Department" GridPane.columnIndex="1" GridPane.rowIndex="8">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </ComboBox>
        
        <Label text="Designation:" GridPane.rowIndex="9">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <TextField fx:id="txtDesignation" promptText="Job Title" GridPane.columnIndex="1" GridPane.rowIndex="9">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </TextField>
        
        <Label text="Date Joined:" GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets left="20.0" />
            </GridPane.margin>
        </Label>
        <DatePicker fx:id="dpDateJoined" prefWidth="1.7976931348623157E308" promptText="YYYY-MM-DD" GridPane.columnIndex="1" GridPane.rowIndex="10">
            <GridPane.margin>
                <Insets left="5.0" right="20.0" />
            </GridPane.margin>
        </DatePicker>

        <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="11">
            <children>
                <Button onAction="#handleSaveUser" text="Save User" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
                <Button onAction="#handleReset" text="Reset" />
                <Button onAction="#handleCancel" text="Cancel" />
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
        </HBox>
    </children>
</GridPane>