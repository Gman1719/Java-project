<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DepartmentController"
            style="-fx-background-color: #f4f6f9;">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #34495e;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Department Management"
                   style="-fx-text-fill: white; -fx-font-weight: bold;">
                <font>
                    <Font size="22.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <HBox spacing="20" alignment="TOP_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox spacing="15" maxWidth="300" minWidth="300"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);">
                
                <Label text="Add / Edit Department" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #34495e;"/>

                <Label text="Department Name" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                <TextField fx:id="txtDepartmentName" promptText="e.g., Human Resources"
                           style="-fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>

                <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                <TextArea fx:id="txtDescription" promptText="Brief description of the department"
                          prefRowCount="4" wrapText="true"
                          style="-fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-padding: 10; -fx-font-size: 13px;"/>
                          
                <HBox spacing="10">
                    <Button fx:id="btnSave" text="Save Department" onAction="#handleSave"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 15; -fx-background-radius: 6;"
                            HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    
                    <Button text="Clear" onAction="#handleClear"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 15; -fx-background-radius: 6;"
                            maxWidth="Infinity"/>
                </HBox>

            </VBox>

            <VBox spacing="15" HBox.hgrow="ALWAYS">
                
                <HBox spacing="10" alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <TextField fx:id="txtSearch"
                               promptText="Search by name or description..."
                               onKeyReleased="#handleSearch"  
                               HBox.hgrow="ALWAYS"
                               style="-fx-background-radius: 6; -fx-padding: 8; -fx-border-color: #ecf0f1; -fx-border-radius: 6; -fx-font-size: 13px;"/>
                    <Button text="Search" onAction="#handleSearch"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
                </HBox>

                <TableView fx:id="tblDepartments" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #ecf0f1; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" minWidth="40" maxWidth="60"/> 
                        
                        <TableColumn fx:id="colName" text="Department Name" minWidth="150" prefWidth="200"/>
                        
                        <TableColumn fx:id="colDescription" text="Description"/>

                        <TableColumn fx:id="colActions" text="Actions" minWidth="150" maxWidth="180"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

            </VBox>
        </HBox>
    </center>
</BorderPane>