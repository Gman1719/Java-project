<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<BorderPane prefHeight="500.0" prefWidth="700.0" styleClass="view-container" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.ProfileController"> <stylesheets>
        <URL value="@/css/hr_dashboard_styles.css" />
    </stylesheets>
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <top>
        <Label text="ðŸ‘¤ Payroll Officer Profile" styleClass="main-title" BorderPane.alignment="CENTER_LEFT" />
    </top>
    
    <center>
        <GridPane hgap="20.0" vgap="15.0" alignment="TOP_LEFT" style="-fx-padding: 20 0 0 0;">
            <columnConstraints>
                <ColumnConstraints percentWidth="30.0" />
                <ColumnConstraints percentWidth="70.0" />
            </columnConstraints>

            <Label text="Employee ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-bold" />
            <TextField fx:id="txtEmployeeId" editable="false" text="PO9001" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label-bold" />
            <TextField fx:id="txtFullName" text="Jane Doe" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label-bold" />
            <TextField fx:id="txtRole" editable="false" text="Payroll Accountant" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="label-bold" />
            <TextField fx:id="txtEmail" text="jane.doe@company.com" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="label-bold" />
            <TextField fx:id="txtContact" text="(555) 123-4567" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="5" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                <Button text="Save Changes" onAction="#saveProfile" styleClass="button-primary" />
                <Button text="Close" onAction="#closeWindow" styleClass="button-secondary" />
            </HBox>
        </GridPane>
    </center>
</BorderPane>