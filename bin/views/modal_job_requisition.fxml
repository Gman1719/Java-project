<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="15.0" styleClass="modal-pane" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.ModalController">
    <stylesheets>
        <URL value="@/css/hr_dashboard_styles.css" />
    </stylesheets>
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <Label fx:id="lblModalTitle" text="New Job Requisition" styleClass="view-title" /> 
    
    <GridPane hgap="15.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="150.0" prefWidth="150.0" hgrow="NEVER" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        
        <Label text="Job Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="txtJobTitle" promptText="e.g., Senior Software Engineer" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        
        <Label text="Department:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <ComboBox fx:id="cmbDepartment" prefWidth="300.0" promptText="Select Department" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        
        <Label text="Hiring Manager:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="txtHiringManager" promptText="Select Manager" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        
        <Label text="Salary Range:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <HBox spacing="10.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <TextField fx:id="txtSalaryMin" promptText="Min (e.g., 80,000)" HBox.hgrow="ALWAYS" />
            <TextField fx:id="txtSalaryMax" promptText="Max (e.g., 120,000)" HBox.hgrow="ALWAYS" />
        </HBox>
        
        <Label text="Job Description:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextArea fx:id="txtJobDescription" prefHeight="150.0" promptText="Enter detailed job responsibilities and requirements..." GridPane.rowIndex="4" GridPane.columnIndex="1" />
        
    </GridPane>
    
    <Region VBox.vgrow="ALWAYS" />
    
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Cancel" onAction="#closeModal" styleClass="button-secondary" /> 
        <Button fx:id="btnPrimaryAction" text="Submit Requisition" onAction="#submitRequisition" styleClass="button-primary" /> 
    </HBox>
</VBox>