<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<StackPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RequestsManagementController">
    <stylesheets>
        <URL value="@/css/hr_dashboard_styles.css" />
    </stylesheets>

    <BorderPane>
        <top>
            <VBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: white;">
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <VBox>
                        <Label text="Employee Requests" style="-fx-font-size: 26px; -fx-font-weight: bold;" />
                        <Label fx:id="lblRequestCount" text="Total Visible Requests: 0" style="-fx-text-fill: #64748b;" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <ComboBox fx:id="cmbStatusFilter" prefWidth="150.0" promptText="Status" />
                        <ComboBox fx:id="cmbTypeFilter" prefWidth="150.0" promptText="Type" />
                        <Button onAction="#applyFilters" text="Filter" styleClass="button-primary" />
                    </HBox>
                </HBox>
            </VBox>
        </top>
        <center>
            <TableView fx:id="tblRequestsList">
                <columns>
                    <TableColumn fx:id="colID" text="ID" prefWidth="80" />
                    <TableColumn fx:id="colEmployee" text="Employee" prefWidth="250" />
                    <TableColumn fx:id="colType" text="Type" prefWidth="150" />
                    <TableColumn fx:id="colDate" text="Submitted" prefWidth="150" />
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="150" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </center>
    </BorderPane>

    <HBox fx:id="paneDetails" visible="false" alignment="CENTER_RIGHT" style="-fx-background-color: rgba(0,0,0,0.5);">
        <Region HBox.hgrow="ALWAYS" onMouseClicked="#hideDetails" />
        
        <VBox prefWidth="500.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 20, 0, 0, 0);">
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 20; -fx-border-color: #e2e8f0; -fx-border-width: 0 0 1 0;">
                <Label text="Request Review" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="âœ•" onAction="#hideDetails" style="-fx-background-color: transparent; -fx-font-size: 18px; -fx-cursor: hand;" />
            </HBox>
            
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background: white;">
                <VBox spacing="20.0" style="-fx-padding: 25;">
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="120" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        
                        <Label text="Employee:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" />
                        <Label fx:id="lblDetailEmployee" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Type:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" />
                        <Label fx:id="lblDetailType" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Submitted On:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" />
                        <Label fx:id="lblDetailDate" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Current Status:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" />
                        <Label fx:id="lblDetailStatus" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Dates Covered:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" />
                        <Label fx:id="lblDetailRelatedDates" text="N/A" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label text="Attachment:" style="-fx-font-weight: bold;" GridPane.rowIndex="5" />
                        <Hyperlink fx:id="linkAttachment" text="View Document" onAction="#viewAttachment" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </GridPane>

                    <Separator />
                    
                    <Label text="Employee Justification" style="-fx-font-weight: bold;" />
                    <TextArea fx:id="txtAreaJustification" editable="false" wrapText="true" prefHeight="100" style="-fx-control-inner-background: #f8fafc;" />

                    <Label text="HR Decision Comments" style="-fx-font-weight: bold;" />
                    <TextArea fx:id="txtAreaHRComment" prefHeight="100" promptText="Enter notes for rejection or clarification..." wrapText="true" />

                    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 20 0;">
                        <Button text="Reject" onAction="#rejectRequest" style="-fx-background-color: #fee2e2; -fx-text-fill: #ef4444; -fx-font-weight: bold;" prefWidth="100" />
                        <Button text="Clarify" onAction="#requestClarification" prefWidth="100" />
                        <Button text="Approve" onAction="#approveRequest" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120" />
                    </HBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </HBox>
</StackPane>