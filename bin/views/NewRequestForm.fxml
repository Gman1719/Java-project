<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-padding: 30; -fx-background-color: #F4F7F9;" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.NewRequestFormController">
    <Label text="ðŸ“¬ Submit New Request" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #34495E;"/>
    <Separator/>
    
    <GridPane hgap="20" vgap="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150" hgrow="NEVER" />
            <ColumnConstraints minWidth="300" prefWidth="400" hgrow="ALWAYS" />
        </columnConstraints>
        
        <Label text="Request Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbRequestType" promptText="Select Request Type" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="Infinity"/>

        <Label fx:id="lblAmountLabel" text="Amount ($):" GridPane.rowIndex="1" GridPane.columnIndex="0" managed="false" visible="false"/>
        <TextField fx:id="txtAmount" promptText="Enter amount" GridPane.rowIndex="1" GridPane.columnIndex="1" managed="false" visible="false"/>

        <Label fx:id="lblOldAccountLabel" text="Old Account Number:" GridPane.rowIndex="2" GridPane.columnIndex="0" managed="false" visible="false"/>
        <TextField fx:id="txtOldAccount" promptText="Enter current account number" GridPane.rowIndex="2" GridPane.columnIndex="1" managed="false" visible="false"/>

        <Label fx:id="lblNewAccountLabel" text="New Account Number:" GridPane.rowIndex="3" GridPane.columnIndex="0" managed="false" visible="false"/>
        <TextField fx:id="txtNewAccount" promptText="Enter new account number" GridPane.rowIndex="3" GridPane.columnIndex="1" managed="false" visible="false"/>

        <Label text="Reason/Details:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtDetails" prefRowCount="6" promptText="Provide full details and justification for your request" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    </GridPane>
    
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Submit Request" onAction="#handleSubmitRequest" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
        <Button text="Close" onAction="#handleClose" style="-fx-background-color: #ECF0F1; -fx-text-fill: #34495E; -fx-font-weight: bold; -fx-padding: 10 20;"/>
    </HBox>
</VBox>