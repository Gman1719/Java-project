<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #F4F7F9;" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.PayslipsHistoryController">
      
    <Label text="ðŸ’µ Payslip History" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #34495E;"/>
    <Separator/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Filter by Year:" />
        <ComboBox fx:id="cbYearFilter" promptText="All Years" />
        <Button text="Apply Filter" onAction="#handleFilter" style="-fx-background-color: #3498DB; -fx-text-fill: white;"/>
    </HBox>
    
    <TableView fx:id="tblPayslips" VBox.vgrow="ALWAYS" minHeight="400" style="-fx-background-color:white; -fx-background-radius:8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);">
        <columns>
            <TableColumn text="Month" fx:id="colMonth" prefWidth="100"/>
            <TableColumn text="Net Salary" fx:id="colNetSalary" prefWidth="120"/>
            <TableColumn text="Gross Salary" fx:id="colGrossSalary" prefWidth="120"/>
            <TableColumn text="Date Processed" fx:id="colDateProcessed" prefWidth="150"/>
            <TableColumn text="Actions" fx:id="colActions" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    
    <HBox alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose" style="-fx-background-color: #ECF0F1; -fx-text-fill: #34495E;"/>
    </HBox>
</VBox>