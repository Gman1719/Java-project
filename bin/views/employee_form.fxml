<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.EmployeeFormController"
      spacing="10" style="-fx-padding:20; -fx-background-color:#f5f5f5;">

    <Label fx:id="lblTitle" text="Add Employee" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="tfFirstName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfLastName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="tfEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="tfPhone" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Department:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="tfDepartment" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Designation:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="tfDesignation" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbRole" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbStatus" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Save" onAction="#saveEmployee"/>
        <Button text="Cancel" onAction="#closeForm"/>
    </HBox>
</VBox>
